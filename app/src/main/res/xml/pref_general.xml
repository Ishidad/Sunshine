<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditTextPreference
        android:title="@string/pref_zipcode_label"
        android:key="@string/pref_zipcode_key"
        android:defaultValue="@string/pref_zipcode_default"
        android:inputType="text"
        android:singleLine="true"/>

    <ListPreference
        android:title="@string/pref_temp_label"
        android:key="@string/pref_temp_key"
        android:defaultValue="@string/pref_temp_celsius"
        android:entries="@array/tempArray"
        android:entryValues="@array/tempValues"/>

</PreferenceScreen>